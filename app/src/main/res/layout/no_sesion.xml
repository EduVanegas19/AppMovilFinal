<?xml version="1.0" encoding="utf-8"?>
<!--VAMOS A CREAR UN DIALOG PERSONALIZADO-->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="#F9FDBE">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--TXT-->
        <TextView
            android:id="@+id/NoInicio"
            android:text="@string/NoInicio"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--ANIMACION-->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="Animation - 1701139948496.json"
            app:lottie_autoPlay="true"/>

        <!--BOTON CERRAR DIALOG-->
        <Button
            android:id="@+id/ok_no_inicio"
            android:text="@string/ok_no_inicio"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_personalizado"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>